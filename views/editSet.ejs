<!-- /views/editSet.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
  <!-- Include the navbar partial -->
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set</h1>

          <p class="pt-2">Form to Edit a Set</p>
        </div>
      </div>
    </div>

    <form action="/lego/editSet" method="POST" class="space-y-4 px-96 p-6">
      <!-- Set Name -->
      <div>
        <label for="name" class="text-sm font-medium text-gray-700">Name:</label>
        <input type="text" id="name" name="name" required value="<%= set.name %>"
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
      </div>
    
      <!-- Year -->
      <div>
        <label for="year" class="text-sm font-medium text-gray-700">Year:</label>
        <input type="number" id="year" name="year" required value="<%= set.year %>"
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
      </div>
    
      <!-- Number of Parts -->
      <div>
        <label for="num_parts" class="text-sm font-medium text-gray-700">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" required value="<%= set.num_parts %>"
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
      </div>
    
      <!-- Image URL -->
      <div>
        <label for="img_url" class="text-sm font-medium text-gray-700">Image URL:</label>
        <input type="url" id="img_url" name="img_url" required value="<%= set.img_url %>"
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
      </div>
    
      <!-- Theme ID -->
      <div>
        <label for="theme_id" class="text-sm font-medium text-gray-700">Theme:</label>
        <select id="theme_id" name="theme_id" required
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
          <% themes.forEach(theme => { %>
          <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>><%= theme.name %></option>
          <% }) %>
        </select>
      </div>
    
      <!-- Set Number -->
      <div>
        <label for="set_num" class="text-sm font-medium text-gray-700">Set Number:</label>
        <input type="text" id="set_num" name="set_num" readonly value="<%= set.set_num %>"
          class="mt-1 p-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400 w-full">
      </div>
    
      <!-- Submit Button -->
      <button type="submit"
        class="btn btn-primary bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-blue-400">Update
        Set</button>
      <a href="/lego/deleteSet/<%= set.set_num %>"
        class="btn btn-error bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-red-400"
        onclick="return confirm('Are you sure you want to delete this set?')">Delete Set</a>
    </form>
    
   
  </div>

  <!-- Include necessary scripts or closing tags -->
</body>

</html>
